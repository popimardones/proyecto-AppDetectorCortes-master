<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarDispositivoActivity">


    <LinearLayout
        android:layout_width="388dp"
        android:layout_height="407dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="0dp">

        <EditText
            android:id="@+id/editText_Lugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/app_Lugar"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <EditText
            android:id="@+id/editText_Telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/app_Telefono"
            android:inputType="phone"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <Button
            android:id="@+id/button_Agregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_Button" />

        <ListView
            android:id="@+id/listaLugares"
            android:layout_width="match_parent"
            android:layout_height="232dp">

        </ListView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>